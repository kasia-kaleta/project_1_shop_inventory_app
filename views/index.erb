<h1>Makeup Store Inventory App</h1>

<nav>
  <h2>Inventory</h2>
</nav>

<form action="/index" method="post">
  <label for="select">Filter by brand: </label>
  <select class="select-search" name="brand_id">
  <% @brands.each do |brand| %>
    <option value="<%= brand.id %>"><%= brand.name %></option>
  <% end %>

    <input type="submit" value="Filter">

  </select>
</form>
<table>

  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Brand</th>
    <th>Category</th>
    <th>Buying Cost</th>
    <th>Selling Price</th>
    <th>Markup</th>
    <th>Quantity</th>
    <th>Stock level</th>
  </tr>
  <% @products.each do |product| %>
  <tr>
  <td><%= product.id %></td>
  <td><%= product.name %></td>
  <td><%= product.brand_name %></td>
  <td><%= product.category_name %></td>
  <td><%= product.buying_cost %></td>
  <td><%= product.selling_price %></td>
   <td><%= (((product.selling_price) - (product.buying_cost)) / (product.buying_cost) * 100).round(2) %>%</td>
  <td><%= product.quantity %></td>
  <td><%= if product.quantity == 0
    p "Out of stock"
  elsif product.quantity < 10
    p "Low stock"
  end
  %></td>


  <% end %>
</table>
